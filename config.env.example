NODE_ENV={development or production}
PORT=8000
DATABASE={MongoDB Atlas Database connection string}
DATABASE_PASSWORD={The password of the database}
DEBUG=undefined
JWT_SECRET={Secret key for the creation of JWT Secrets}
JWT_EXPIRES_IN={Expiration date of the JWT, the most common is 30d or 7d}
JWT_COOKIE_EXPIRES_IN={Expiration date of the JWT Cookie}
EMAIL_USERNAME={anything@gmail.com}
EMAIL_PASSWORD={12345}
